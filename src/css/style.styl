// Import all partials
@require './_*.styl'

ul, menu, dir
  display: block;
  list-style-type: disc;
  -webkit-margin-before: 0px;
  -webkit-margin-after: 0px;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
  -webkit-padding-start: 0px;

// random styling so there's no weird gaps between divs
// the height @150% to not show gaps between divs
// the border needs to go around divs too as this 
// affects the view height is not set for some reason

.nav
  color: white
  background: purple
  border 2px solid purple

.links
  list-style: none
  display: flex
  li
    flex: 1

.header
  background: purple
  display: block
  height: 150%
  border 2px solid purple

.about
  height: 150%
  background: pink
  border 2px solid pink

.portfolio
  height: 150%
  background: yellow
  border 2px solid yellow

.contact
  height: 150%
  background: minsk
  border 2px solid minsk

.social
  list-style:none
  display:flex
  border 2px solid minsk
  li
    flex:1

.logo
  height: 40px

