// random styling so there's no weird gaps between divs
// the height @150% to not show gaps between divs
// the border needs to go around divs too as this 
// affects the view height is not set for some reason

h1
  padding-top: 10%
  padding-bottom: 10%

.nav
  color: white
  background: purple
  border 2px solid purple
  font-size: 0.6em
  text-decoration: none 

.links
  // display: flex
  display: flex;
  flex-flow: row wrap;
  /* This aligns items to the end line on main-axis */
  justify-content: flex-end;
  list-style: none
  align-items: center
  li
    padding: 20px
    // flex: 1
  a:link
    text-decoration: none
    color: white
  a:visited
    color: white
  a:hover
    color: pink
  a:active
    color: yellow

.logo
  height: 30px

@media all and (max-width: 800px)
  .links
    justify-content space-around

@media all and (max-width: 500px)
  .links
    flex-direction column

.header
  background: purple
  display: block
  height: 150%
  border 2px solid purple
  p
    text-align: center

.about
  height: 150%
  background: pink
  border 2px solid pink

.portfolio
  height: 150%
  background: yellow
  border 2px solid yellow

.contact
  height: 150%
  background: minsk
  border 2px solid minsk

.social
  padding: 30% 30px 30px 30px
  list-style: none
  display:flex
  border 2px solid minsk
  ul
    justify-content: space-between
  li
    flex: 1
    text-align: center
  a:link
    color: white
  a:visited
    color: white
  a:hover
    color: pink
  a:active
    color: yellow


